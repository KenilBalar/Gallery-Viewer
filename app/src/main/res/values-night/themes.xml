<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GallaryViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_purple</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTopLayer" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="android:statusBarColor">@color/dark_purple</item>
    </style>

    <!--Font style-->

    <style name="FontSize_16sp">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="FontSize_18sp">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="Black_TextviewStyle_16sp" parent="FontSize_16sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="White_TextviewStyle_16sp" parent="FontSize_16sp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Black_TextviewStyle_18sp" parent="FontSize_18sp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="White_TextviewStyle_18sp" parent="FontSize_18sp">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>